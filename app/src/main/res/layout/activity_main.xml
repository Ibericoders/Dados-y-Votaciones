<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sergioescalona.dadosyvotacionesapp.Activities.MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="@string/text_view_dices_votes"
        android:textColor="@color/colorSecondaryText"
        android:textSize="32sp" />

    <Button
        android:id="@+id/buttonDice"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="87dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="goToDice"
        android:text="@string/text_button_dices"
        android:layout_below="@+id/textViewTitle"
        android:layout_alignLeft="@+id/buttonVotes"
        android:layout_alignStart="@+id/buttonVotes"
        android:layout_alignRight="@+id/buttonVotes"
        android:layout_alignEnd="@+id/buttonVotes" />

    <Button
        android:id="@+id/buttonVotes"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:onClick="goToVote"
        android:text="@string/text_button_votes"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="109dp" />


</RelativeLayout>
